<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="images/student.png" type = "image/x-icon">
        <link rel="stylesheet" href="/cdn/bootstrap.min.css">
        <script src="/cdn/jquery.min.js"></script>
        <script src="/cdn/popper.min.js"></script>
        <script src="/cdn/bootstrap.min.js"></script>
        <script src="/cdn/jquery_2.min.js"></script>
        <script src="/cdn/vue.js"></script>
        <script src="js/graphql.js"></script>
        <script src="/cdn/vuex.js"></script>
    </head>
    <body>
        <div class="container-fluid" id="app">
            <%- include("menu.ejs"); %>
            <div class="row">
                <div class="col text-center">
                    <h1>Danh sách tài khoản</h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="usr">Tìm tài khoản</label>
                        <input type="text" class="form-control" id="usr">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                        Tạo tài khoản
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <div class="form-check-inline">
                        <label class="form-check-label">
                          <input type="radio" class="form-check-input" name="optradio">Tên học sinh
                        </label>
                      </div>
                      <div class="form-check-inline">
                        <label class="form-check-label">
                          <input type="radio" class="form-check-input" name="optradio">Số điện thoại
                        </label>
                      </div>
                </div>
            </div>
            <div class="row my-3">
                <div class="col">
                    <table class="table table-bordered" v-if="users.length > 0">
                        <tr>
                            <th>Số điện thoại</th>
                            <th>Tên học sinh</th>
                            <th>Lớp học</th>
                            <th>Hành động</th>
                        </tr>
                        <tr v-for="user in users">
                            <td>{{user.phone}}</td>
                            <td>{{user.name}}</td>
                            <td>
                                <div>
                                    <span class="badge badge-danger mx-1" v-for="lophoc in user.lophoc"> {{lophoc.name}} </span>
                                </div>
                            </td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>
        <!-- The Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
  
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Thêm tài khoản</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
  
        <!-- Modal body -->
        <div class="modal-body">
            <create-user></create-user>
        </div>
  
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
        </div>
  
      </div>
    </div>
  </div>
        </div>
        
        <script src="manage.js"></script>
    </body>
</html>